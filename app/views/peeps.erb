<section>
  Current Greets.....
</section>

<section>

  <form method="post" action="/peeps">

    Greet : <input type="text" name="body">
    <input type="hidden" name="username" value="<%= current_user.username %>">
    <input type="hidden" name="name" value="<%= current_user.fullname %>">
    <input type="submit" value="Peep!">

  </form>

</section>

<% @peeps.reverse.each do |peep| %>

<section>
  <p><%= peep.username %></p>
  <p><%= peep.body %></p>
  <p>Peeped at <%= peep.created_at.to_s.chars[0..15].each_slice(10).to_a.rotate.flatten.drop(1).insert(5, " ").join %></p>
</section>

<% end %>
